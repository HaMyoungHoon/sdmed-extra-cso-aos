<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/def_background"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_calendar_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/def_background"
            android:paddingTop="32dp"
            android:paddingBottom="12dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_previous"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/vector_arrow_left"
                app:layout_constraintTop_toTopOf="@id/tv_current_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_current_date"
                app:layout_constraintEnd_toStartOf="@id/tv_current_date"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/def_foreground"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="2025-02-07" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_subsequent"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="26dp"
                android:src="@drawable/vector_arrow_right"
                app:layout_constraintTop_toTopOf="@id/tv_current_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_current_date"
                app:layout_constraintStart_toEndOf="@id/tv_current_date" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_close"
                android:layout_marginEnd="25dp"
                app:layout_constraintTop_toTopOf="@id/tv_current_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_current_date"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_abbreviation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:layout_marginTop="14dp"
            android:paddingBottom="7dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/monday_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/week_mon_desc"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="normal" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tuesday_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/week_tues_desc"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="normal" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/wednesday_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/week_wed_desc"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="normal" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/thursday_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/week_thur_desc"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="normal" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/friday_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/week_fri_desc"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="normal" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/saturday_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/week_sat_desc"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="normal" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sunday_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4dp"
                android:text="@string/week_sun_desc"
                android:fontFamily="@font/nanum_gothic"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="normal" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <sdmed.extra.cso.utils.calendar.extensions.CalendarViewPager
                android:id="@+id/calendar_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>