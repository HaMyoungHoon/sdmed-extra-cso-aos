<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="sdmed.extra.cso.models.retrofit.hospitals.PharmacyTempModel.ClickEvent" />
        <variable
            name="dataContext"
            type="sdmed.extra.cso.models.retrofit.hospitals.PharmacyTempModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{dataContext.select ? @color/def_foreground : @color/half_background}"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:onClick="@{() -> dataContext.onClick(ClickEvent.THIS)}"
        tools:background="@color/half_foreground">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dataContext.orgName}"
            android:fontFamily="@font/nanum_gothic"
            android:textSize="16sp"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="병원이름임" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@{dataContext.address}"
            android:fontFamily="@font/nanum_gothic"
            android:textSize="16sp"
            android:textColor="@{dataContext.select ? @color/def_background : @color/def_foreground}"
            android:maxLines="1"
            android:ellipsize="middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_org_name"
            app:layout_constraintEnd_toStartOf="@id/tv_phone_number"
            tools:text="aslkdjflkasdfj asdfkj asdflkj alsdkfj"
            tools:textColor="@color/def_background"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dataContext.phoneNumber}"
            android:fontFamily="@font/nanum_gothic"
            android:textSize="16sp"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="010-6574-8520" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>